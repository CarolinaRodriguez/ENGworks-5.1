requires task.selection

Rem  Set Sleeve Stop depth
rem dim FF = inputbox("Finished Slab Elevation")
dim st = inputbox("Thickness of Slab")
dim had = inputbox("Enter Distance From Top-of-Slab to Top-of-Deck")
dim sas = inputbox("Enter Distance From Top-of-Slab to Top-of-Sleeve")

dim i = 1

while i <= task.selection.count
    dim item = task.selection[i]
  if item.servicetype = "Floor Opening" then
    if item.cid = 1049 or item.cid = 972 then
    item.dim["Length"].value = st + sas
    item.customdata["Sleeve Stop Depth"].value = had + sas
    Endif
  endif
 
 
    i = i + 1
item.update()
end while