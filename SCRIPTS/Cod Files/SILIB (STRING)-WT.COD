REM *******************************************************************************
REM *     FUNCTION: Calculate remainder of division between 2 numbers             *
REM *   ARGUEMENTS: N = Numerator {number}                                        *
REM *               D = Divisor {number}                                          *
REM * RETURN VALUE: Number                                                        *
REM * DEPENDENCIES: None                                                          *
REM *******************************************************************************
function MOD (N, D)
 dim tmp
 tmp=n - (rounddown(n / d, 0) * d)
 return tmp
end function


REM *******************************************************************************
REM *     FUNCTION: Calculate greatest common divisor                             *
REM *   ARGUEMENTS: N1 = Number #1 {number}                                       *
REM *               N2 = Number #2 {number}                                       *
REM * RETURN VALUE: Number                                                        *
REM * DEPENDENCIES: None                                                          *
REM *******************************************************************************
function GCD(N1, N2)
   dim tmp
   while N1<>0
      tmp=n1
      n1=MOD(n2, n1)
      n2=tmp
   end while
   return n2
end function



