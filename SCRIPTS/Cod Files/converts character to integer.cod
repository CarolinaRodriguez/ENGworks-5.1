dim cr = ascii(10)

rem converts character to integer
function ctoi(s)

	dim iRet
	
	iRet = -1

	select s
		case "0"
			iRet = 0
		case "1"
			iRet = 1
		case "2"
			iRet = 2
		case "3"
			iRet = 3
		case "4"
			iRet = 4
		case "5"
			iRet = 5
		case "6"
			iRet = 6
		case "7"
			iRet = 7
		case "8"
			iRet = 8
		case "9"
			iRet = 9
		case "."
			iRet = "."
	end select
	
	return iRet
end function

rem input box setting sNum to a string
dim sNum = inputbox("Type a number","Numeric Only",0.0)
dim sNumlen = len(sNum)

rem checks the sNum variable for integers or a decimal point as in the function above.
rem if this fails it will loop into showing input boxes until all numbers are input.
while sNumlen >= 1
	dim i = sNumlen
	dim iNum 
	dim sNum1
		sNum1 = substring(sNum,i,i)
		iNum = ctoi(sNum1) 
		sNumlen = i - 1

		if iNum = -1 then
			sNumlen = 0
			debug "Input was not a number or included letters." + cr + "Please input a number in the following dialog."
			sNum = inputbox("PLEASE, Type a number","NUMERIC ONLY",sNum)
				sNumlen = len(sNum)
		end if
debug iNum
end while

