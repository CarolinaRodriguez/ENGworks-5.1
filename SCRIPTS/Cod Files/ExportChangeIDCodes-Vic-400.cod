function getrelativefrom( path, relativefrom )

  dim rellen=len(relativefrom)
 
  dim rel = instr(1, path, "\" + relativefrom + "\")
  if not rel then rel = instr(1, path, "/" + relativefrom + "/")
 
  dim rv
 
  if rel then
    rv = substring( path, rel+rellen+2, 0 )
  else
    rv = path
  endif

  return rv

endfunction

