Rem Change L-Pits to S-Pits less than 18ga


 If Item.cid = 866 and Item.cuttype = "Decoiled Straight" then
  if item.wiregauge > 18 then
   if item.seam[1].value = "L-Pits." or item.seam[1].value = "L-Pitts." Then
    item.seam[1].value = "S-Pits."
    item.seam[1].locked = true
   Endif
  endif
 endif


 If Item.cid = 866 and Item.cuttype = "Decoiled Straight" then
  if item.wiregauge > 18 then
   if item.seam[2].value = "L-Pits" or item.seam[2].value = "L-Pitts." Then
    item.seam[2].value = "S-Pits."
    item.seam[2].locked = true
   Endif
  endif
 endif


Item.update()